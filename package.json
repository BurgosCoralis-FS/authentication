{
  "name": "authentication",
  "version": "1.0.0",
  "engines": {
    "node": "21.6.2"
  },
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-client && npm run api",
    "build-client": "npm run build --prefix client",
    "build-api": "npm run build --prefix api",
    "install": "npm install --prefix api && npm install --prefix client",
    "install-client": "npm install --prefix client",
    "install-api": "npm install --prefix api",
    "start": "npm start --prefix api",
    "dev:client": "concurrently --raw \"npm run api\" \"npm run client\" \"npm install -g serve\" \"serve -s build\"",
    "client": "cd client && npm run start",
    "api": "cd api && npm run dev"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
